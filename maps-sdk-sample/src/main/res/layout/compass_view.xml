<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent_bg"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <ImageView
        android:id="@+id/fabCompass"
        android:layout_width="@dimen/dp_72"
        android:layout_height="@dimen/dp_72"
        android:layout_margin="@dimen/dp_5"
        android:background="@drawable/ic_all_round_corner"
        android:elevation="@dimen/dp_5"
        android:src="@drawable/ic_compass_up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDirectionName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="@dimen/dp_7"
        android:fontFamily="@font/gentona_medium"
        android:gravity="center"
        android:text="N"
        android:textColor="@color/color_5F626C_FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/fabCompass"
        app:layout_constraintEnd_toEndOf="@+id/fabCompass"
        app:layout_constraintStart_toStartOf="@+id/fabCompass"
        app:layout_constraintTop_toTopOf="@+id/fabCompass" />

</androidx.constraintlayout.widget.ConstraintLayout>
